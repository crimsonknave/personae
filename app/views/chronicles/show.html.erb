<h3>Name</h3>
<%= @chronicle.name %>

<h3>Description</h3>
<%= simple_format(@chronicle.description) %>

<h3>Characters</h3>
<%= render :partial => 'characters/list' %>

<h3>Cliques</h3>
<%= render :partial => 'cliques/list' %>

<br />
<%= link_to('New character', new_character_path(:chronicle_id => @chronicle.id)) + " | " %>
<%= link_to('Edit', edit_chronicle_path(@chronicle)) + " | " if @chronicle.can_edit_as_user?(current_user) %>
<%= link_to 'Destroy', @chronicle, :confirm => 'Are you sure you want to delete this chronicle?', :method => :delete if @chronicle.can_destroy_as_user?(current_user) %>
