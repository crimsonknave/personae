<h3>Name:</h3>
<%= @chronicle.name %>

<h3>Description:</h3>
<%= @chronicle.description %>

<h3>Characters:</h3>
<table>
  <tr>
    <th></th>
    <th>Name</th>
    <th>Clique</th>
    <th>Ideology</th>
    <th></th>
  </tr>

  <% @chronicle.characters.each do |character| %>
    <tr>
      <td><%= link_to image_tag("edit.png"), edit_character_path(character) if character.can_edit_as_user?(session[:user_id]) %></td>
      <td><%= link_to character.name, character %></td>
      <td><%= link_to character.clique.name, character.clique if character.show_clique_to_user?(session[:user_id]) %></td>
      <td><%= link_to character.ideology.name, character.ideology if character.show_clique_to_user?(session[:user_id]) %></td>
      <td><%= link_to image_tag("delete.png"), character, :confirm => 'Are you sure you want to delete this character?', :method => :delete if character.can_destroy_as_user?(session[:user_id]) %></td>
    </tr>
  <% end %>
</table>

<h3>Cliques:</h3>
<table>
  <tr>
    <th></th>
    <th>Name</th>
    <th>Territory</th>
    <th></th>
  </tr>

  <% @chronicle.cliques.each do |clique| %>
    <tr>
      <td><%= link_to image_tag("edit.png"), edit_clique_path(clique) if clique.can_edit_as_user?(session[:user_id]) %></td>
      <td><%= link_to clique.name, clique %></td>
      <td><%= clique.territory %></td>
      <td><%= link_to image_tag("delete.png"), clique, :confirm => 'Are you sure you want to delete this clique?', :method => :delete if clique.can_destroy_as_user?(session[:user_id]) %></td>
    </tr>
  <% end %>
</table>

<br />
<%= link_to 'Edit', edit_chronicle_path(@chronicle) %>
