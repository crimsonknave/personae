<table>
  <tr>
    <th></th>
    <th>Name</th>
    <th></th>
  </tr>

  <% @chronicles.each do |chronicle| %>
    <tr>
      <td><%= link_to image_tag("edit.png"), edit_chronicle_path(chronicle) if chronicle.can_edit_as_user?(current_user) %></td>
      <td><%= link_to chronicle.name, chronicle %></td>
      <td><%= link_to image_tag("delete.png"), chronicle, :confirm => 'Are you sure you want to delete this chronicle?', :method => :delete if chronicle.can_destroy_as_user?(current_user) %></td>
    </tr>
  <% end %>
</table>

<br />

<%= link_to 'New Chronicle', new_chronicle_path %>
