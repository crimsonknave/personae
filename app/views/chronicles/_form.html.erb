<%= form_for(@chronicle) do |f| %>
  <% if @chronicle.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@chronicle.errors.count, "error") %> prohibited this chronicle from being saved:</h2>

      <ul>
      <% @chronicle.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <h4>Name</h4>
  <%= f.text_field :name %>
  
  <% unless @campaigns.nil? %>
    <h4>Obsidian Portal Link</h4>
    <%= f.select :obsidian_campaign_id, @campaigns %>
  <% end %>
  
  <% if @users %>
    <h4>Storyteller</h4>
    <%= f.select :owner_id, options_from_collection_for_select(@users, :id, :name, @chronicle.owner_id) %>
  <% end %>
  
  <h4>Description</h4>
  <%= f.text_area :description %>
  
  <%= f.submit "Save" %>
<% end %>
