<table>
  <tr>
    <th></th>
    <th>Name</th>
    <th></th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= link_to image_tag("edit.png"), edit_user_path(user) if user.can_edit_as_user?(session[:user_id]) %></td>
      <td><%= link_to user.name, user %></td>
      <td><%= link_to image_tag("delete.png"), user, :confirm => 'Are you sure you want to delete this user?', :method => :delete if user.can_destroy_as_user?(session[:user_id]) %></td>
    </tr>
  <% end %>
</table>
