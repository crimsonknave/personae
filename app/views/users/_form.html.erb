<% form_for(@user) do |f| %>
  <%= f.error_messages %>

	<div>
		<%= f.label :name, 'Name' %>
		<%= f.text_field :name %>
	</div>
	
	<div>
		<%= f.label :password, 'Password' %>
		<%= f.password_field :password %>
	</div>
	
	<div>
		<%= f.label :password_confirmation, 'Confirm' %>
		<%= f.password_field :password_confirmation %>
	</div>
	
  <p>
    <%= f.submit 'Save' %>
  </p>
<% end %>
