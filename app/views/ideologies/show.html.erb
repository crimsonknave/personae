<p>
    <h3>Name:</h3>
    <%= @ideology.name %>
</p>

<p>
  <table>
    <tr>
      <th>Member:</th>
      <th><%= @ideology.splat.clique_name %>:</th>
    </tr>

    <%= render(:partial => "member", :collection => @ideology.characters) %>
  </table>
</p>


<%= link_to 'New member', { :controller => :characters, :action => 'new', :ideology_id => @ideology } %> | 
<%= link_to 'Edit', edit_ideology_path(@ideology) if edit_ideology?(@ideology) %> | 
<%= link_to 'Destroy', @ideology, :confirm => 'Are you sure you want to delete this ideology?', :method => :delete if edit_ideology?(@ideology) %>
