<p>
    <h3>Name</h3>
    <%= @ideology.name %>
</p>

<p>
  <table class='list'>
    <tr>
      <th>Member</th>
      <th>Concept</th>
      <th><%= @ideology.splat.clique_name %></th>
    </tr>

    <%= render(:partial => "member", :collection => @ideology.characters) %>
  </table>
</p>


<%= link_to('New member', new_character_path(:ideology_id => @ideology.id)) if can? :create, Character %>
<% if can? :edit, @ideology %>
  | <%= link_to('Edit', edit_ideology_path(@ideology)) %>
<% end %>
<% if can? :destroy, @ideology %>
  | <%= link_to('Destroy', @ideology, :confirm => 'Are you sure you want to delete this ideology?', :method => :delete) %>
<% end %>
