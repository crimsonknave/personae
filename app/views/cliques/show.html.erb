<% if known_clique?(@clique) %>
	<p>
		<h3>Name:</h3>
		<p><%=h @clique.name %></p>
	</p>

	<p>
		<h3>Territory:</h3>
		<p><%=h @clique.territory %></p>
	</p>

	<p>
		<h3>Description:</h3>
		<p><%=h @clique.description %></p>
	</p>

	<p>
	<table>
		<tr>
			<th>Member:</th>
			<th>Ideology:</th>
		</tr>
		<%= render(:partial => "member", :collection => @clique.characters) %>
	</table>
	</p>


	<div id="navbar">
		<%= link_to 'Back', :back, :class => "button" %>
		<%= link_to 'New member', { :controller => 'characters', :action => 'new', :clique_id => @clique.id }, :class => "button" %>
		<%= link_to 'Edit', edit_clique_path(@clique), :class => "button" if edit_clique?(@clique) %>
		<%= link_to 'Destroy', @clique, :confirm => 'Are you sure you want to delete this clique?', :method => :delete, :class => "button" if edit_clique?(@clique) %>
	</div>
<% else %>
	<% flash[:notice] = "You can't see this clique" %>
<% end %>
