<%= form_for([@clique.chronicle, @clique]) do |f| %>
  <% if @clique.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@clique.errors.count, "error") %> prohibited this clique from being saved:</h2>

      <ul>
      <% @clique.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <h4>Name</h4>
  <p><%= f.text_field :name %></p>

  <h4>Territory</h4>
  <p><%= f.text_field :territory %></p>

  <h4>Description</h4>
  <p><%= f.text_area :description %></p>

  <% if @clique.has_totem? %>
    <h4>Totem</h4>
    <p><%= f.text_area :totem %></p>
  <% end %>

  <h4>Chronicle</h4>
  <p><%= f.select :chronicle_id, options_from_collection_for_select(@chronicle_list, 'id', 'name', @clique.chronicle.id) %></p>
  <%= f.check_box :write, :class => "checkbox" %> <%= f.label :write, "Available for players", :class => "checkbox inline" %>
  <br />
  
  <%= f.submit 'Save' %>
<% end %>
