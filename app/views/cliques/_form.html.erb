<% form_for(@clique) do |f| %>
  <%= f.error_messages %>
  
  <% if controller.action_name == 'new' %>
	<% @clique.user_id = session[:user_id] %>
	<input name="clique[user_id]" type="hidden" value=<%= session[:user_id] %> >
  <% end %>

    <fieldset>
    <legend><%= f.label :name %></legend>
    <p><%= f.text_field :name %></p>
    </fieldset>

    <fieldset>
    <legend><%= f.label :territory %></legend>
    <p><%= f.text_field :territory %></p>
    </fieldset>

    <fieldset>
    <legend><%= f.label :description %></legend>
    <p><%= f.text_area :description %></p>
    <%= f.check_box :write %> <%= f.label :write %>
    </fieldset>

  <p>
    <%= f.submit 'Save' %>
  </p>
<% end %>
