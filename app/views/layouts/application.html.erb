<!DOCTYPE html>
<html>
<head>
  <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
  <title>
    <%= case params[:controller]
      when "chronicles" then @chronicle.name + " : " if @chronicle and @chronicle.name
      when "characters" then @character.name + " : " if @character and @character.name
      when "cliques" then @clique.name + " : " if @clique and @clique.name
      when "ideologies" then @ideology.name + " : " if @clique and @ideology.name
    end %>
    City of Darkness
  </title>

  <%= javascript_include_tag :defaults %>
  <%= stylesheet_link_tag 'custom' %>
  <%= csrf_meta_tag %>
</head>
<body>

<div id="column">
  <div id="header">
    <h1>City of Darkness</h1>
    
    <ul id="menu">
      <%= li_selected_if(params[:controller] == "characters") do %>
        <%= link_to "Characters", characters_path %>
      <% end %>
      <%= li_selected_if(params[:controller] == "cliques") do %>
        <%= link_to "Cliques", cliques_path %>
      <% end %>
      <%= li_selected_if(params[:controller] == "ideologies") do %>
        <%= link_to "Ideologies", ideologies_path %>
      <% end %>
      <%= li_selected_if(params[:controller] == "chronicles") do %>
        <%= link_to "Chronicles", chronicles_path %>
      <% end %>
      <% if user_signed_in? %>
        <%= li_selected_if((params[:controller] == "admin" or params[:controller] == "devise/registrations")) do %>
          <%= link_to "Account", '#' %>
          <ul>
            <li><%= link_to "Edit account", edit_user_registration_path %></li>
            <%= ("<li>" + link_to("Admins", manage_admins_path) + "</li>").html_safe if current_user.admin? %>
            <li><%= link_to "Log out", destroy_user_session_path %></li>
          </ul>
        <% end %>
      <% else %>
        <%= li_selected_if(params[:controller] == "devise/sessions") do %>
          <%= link_to "Log in", new_user_session_path %>
        <% end %>
      <% end %>
    </ul>
  </div>
  
  <div id="content">
    <div id="notice"><%= flash[:notice] %></div>
    <div id="alert"><%= alert %></div>
    <%= yield %>
  </div>
</div>

</body>
</html>
