<table class='list'>
  <tr>
    <th></th>
    <th>Name</th>
    <th align='center'>Concept</th>
    <th>Clique</th>
    <th></th>
  </tr>
  
  <% @characters.each do |character| %>
    <tr>
      <td><%= link_to image_tag("edit.png"), edit_character_path(character) if can? :edit, character %></td>
      <td><%= link_to character.name, character %></td>
      <td><%= character.concept %></td>
      <td><%= link_to character.clique.name, character.clique if character.show_clique_to_user?(current_user) %></td>
      <td><%= link_to image_tag("delete.png"), character, :confirm => 'Are you sure you want to delete this character?', :method => :delete if can? :destroy, character %></td>
    </tr>
  <% end %>
</table>
