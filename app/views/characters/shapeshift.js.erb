<% if @form == 'hishu' %>
  $('strength').update("<%= dot_format(@character.strength) %>");
  $('dexterity').update("<%= dot_format(@character.dexterity) %>");
  $('stamina').update("<%= dot_format(@character.stamina) %>");
  $('manipulation').update("<%= dot_format(@character.manipulation) %>");
  $('health').update("<%= dot_format(@character.health) %>");
  $('size').update("<%= @character.size %>");
  $('initiative').update("<%= @character.initiative %>");
  $('speed').update("<%= @character.speed %>");
  $('defense').update("<%= @character.defense %>");
  $('armor').update("<%= @character.armor %>");
  formHeader = 1;
<% elsif @form == 'dalu' %>
  $('strength').update("<%=raw "<abbr title='#{dot_format(@character.strength)}'>#{dot_format(@character.strength + 1)}</abbr>" %>");
  $('dexterity').update("<%= dot_format(@character.dexterity) %>");
  $('stamina').update("<%=raw "<abbr title='#{dot_format(@character.stamina)}'>#{dot_format(@character.stamina + 1)}</abbr>" %>");
  $('manipulation').update("<%=raw "<abbr title='#{dot_format(@character.manipulation)}'>#{dot_format([@character.manipulation - 1, 1].max)}</abbr>" %>");
  $('health').update("<%=raw "<abbr title='#{dot_format(@character.health)}'>#{dot_format(@character.health + 2)}</abbr>" %>");
  $('size').update("<%=raw "<abbr title='#{@character.size}'>#{@character.size + 1}</abbr>" %>");
  $('initiative').update("<%= @character.initiative %>");
  $('speed').update("<%=raw "<abbr title='#{@character.speed}'>#{@character.speed + 1}</abbr>" %>");
  $('defense').update("<%= "#{[@character.wits, @character.dexterity].min}" %>");
  $('armor').update("<%= @character.armor %>");
  formHeader = 2;
<% elsif @form == 'gauru' %>
  $('strength').update("<%=raw "<abbr title='#{dot_format(@character.strength)}'>#{dot_format(@character.strength + 3)}</abbr>" %>");
  $('dexterity').update("<%=raw "<abbr title='#{dot_format(@character.dexterity)}'>#{dot_format(@character.dexterity + 1)}</abbr>" %>");
  $('stamina').update("<%=raw "<abbr title='#{dot_format(@character.stamina)}'>#{dot_format(@character.stamina + 2)}</abbr>" %>");
  $('manipulation').update("<%=raw "<abbr title='#{dot_format(@character.manipulation)}'>-</abbr>" %>");
  $('health').update("<%=raw "<abbr title='#{dot_format(@character.health)}'>#{dot_format(@character.health + 4)}</abbr>" %>");
  $('size').update("<%=raw "<abbr title='#{@character.size}'>#{@character.size + 2}</abbr>" %>");
  $('initiative').update("<%=raw "<abbr title='#{@character.initiative}'>#{@character.initiative + 1}</abbr>" %>");
  $('speed').update("<%=raw "<abbr title='#{@character.speed}'>#{@character.speed + 4}</abbr>" %>");
  $('defense').update("<%=raw "<abbr title='#{@character.defense}'>#{[@character.wits, @character.dexterity + 1].min}</abbr>" %>");
  $('armor').update("<%=raw "<abbr title='#{@character.armor}'>1/1</abbr>" %>");
  formHeader = 3;
<% elsif @form == 'urshul' %>
  $('strength').update("<%=raw "<abbr title='#{dot_format(@character.strength)}'>#{dot_format(@character.strength + 2)}</abbr>" %>");
  $('dexterity').update("<%=raw "<abbr title='#{dot_format(@character.dexterity)}'>#{dot_format(@character.dexterity + 2)}</abbr>" %>");
  $('stamina').update("<%=raw "<abbr title='#{dot_format(@character.stamina)}'>#{dot_format(@character.stamina + 2)}</abbr>" %>");
  $('manipulation').update("<%=raw "<abbr title='#{dot_format(@character.manipulation)}'>#{dot_format([@character.manipulation - 3, 1].max)}</abbr>" %>");
  $('health').update("<%=raw "<abbr title='#{dot_format(@character.health)}'>#{dot_format(@character.health + 3)}</abbr>" %>");
  $('size').update("<%=raw "<abbr title='#{@character.size}'>#{@character.size + 1}</abbr>" %>");
  $('defense').update("<%=raw "<abbr title='#{@character.defense}'>#{[@character.wits, @character.dexterity + 2].min}</abbr>" %>");
  $('initiative').update("<%=raw "<abbr title='#{@character.initiative}'>#{@character.initiative + 2}</abbr>" %>");
  $('speed').update("<%=raw "<abbr title='#{@character.speed}'>#{@character.speed + 7}</abbr>" %>");
  $('armor').update("<%= @character.armor %>");
  formHeader = 4;
<% elsif @form == 'urhan' %>
  $('strength').update("<%= dot_format(@character.strength) %>");
  $('dexterity').update("<%=raw "<abbr title='#{dot_format(@character.dexterity)}'>#{dot_format(@character.dexterity + 2)}</abbr>" %>");
  $('stamina').update("<%=raw "<abbr title='#{dot_format(@character.stamina)}'>#{dot_format(@character.stamina + 1)}</abbr>" %>");
  $('manipulation').update("<%=raw "<abbr title='#{dot_format(@character.manipulation)}'>#{dot_format([@character.manipulation - 1, 1].max)}</abbr>" %>");
  $('health').update("<%= dot_format(@character.health) %>");
  $('size').update("<%=raw "<abbr title='#{@character.size}'>#{@character.size + 1}</abbr>" %>");
  $('initiative').update("<%=raw "<abbr title='#{@character.initiative}'>#{@character.initiative + 2}</abbr>" %>");
  $('speed').update("<%=raw "<abbr title='#{@character.speed}'>#{@character.speed + 5}</abbr>" %>");
  $('defense').update("<%=raw "<abbr title='#{@character.defense}'>#{[@character.wits, @character.dexterity + 2].min}</abbr>" %>");
  $('armor').update("<%= @character.armor %>");
  formHeader = 5;
<% end %>

$$('#woof_forms th a').each(function(item) {
  item.removeClassName("selected");
});
$$('#woof_forms th:nth-child('+formHeader+') a').each(function(item) {
  item.addClassName("selected");
});
