<% if @form == 'hishu' %>
  $('#strength').html("<%= dot_format(@character.strength) %>");
  $('#dexterity').html("<%= dot_format(@character.dexterity) %>");
  $('#stamina').html("<%= dot_format(@character.stamina) %>");
  $('#manipulation').html("<%= dot_format(@character.manipulation) %>");
  $('#health').html("<%= dot_format(@character.health) %>");
  $('#size').html("<%= @character.size %>");
  $('#initiative').html("<%= @character.initiative %>");
  $('#speed').html("<%= @character.speed %>");
  $('#defense').html("<%= @character.defense %>");
  $('#armor').html("<%= @character.armor %>");
  formHeader = 1;
<% elsif @form == 'dalu' %>
  $('#strength').html("<%=raw "<abbr title='#{dot_format(@character.strength)}'>#{dot_format(@character.strength + 1)}</abbr>" %>");
  $('#dexterity').html("<%= dot_format(@character.dexterity) %>");
  $('#stamina').html("<%=raw "<abbr title='#{dot_format(@character.stamina)}'>#{dot_format(@character.stamina + 1)}</abbr>" %>");
  $('#manipulation').html("<%=raw "<abbr title='#{dot_format(@character.manipulation)}'>#{dot_format([@character.manipulation - 1, 1].max)}</abbr>" %>");
  $('#health').html("<%=raw "<abbr title='#{dot_format(@character.health)}'>#{dot_format(@character.health + 2)}</abbr>" %>");
  $('#size').html("<%=raw "<abbr title='#{@character.size}'>#{@character.size + 1}</abbr>" %>");
  $('#initiative').html("<%= @character.initiative %>");
  $('#speed').html("<%=raw "<abbr title='#{@character.speed}'>#{@character.speed + 1}</abbr>" %>");
  $('#defense').html("<%= "#{[@character.wits, @character.dexterity].min}" %>");
  $('#armor').html("<%= @character.armor %>");
  formHeader = 2;
<% elsif @form == 'gauru' %>
  $('#strength').html("<%=raw "<abbr title='#{dot_format(@character.strength)}'>#{dot_format(@character.strength + 3)}</abbr>" %>");
  $('#dexterity').html("<%=raw "<abbr title='#{dot_format(@character.dexterity)}'>#{dot_format(@character.dexterity + 1)}</abbr>" %>");
  $('#stamina').html("<%=raw "<abbr title='#{dot_format(@character.stamina)}'>#{dot_format(@character.stamina + 2)}</abbr>" %>");
  $('#manipulation').html("<%=raw "<abbr title='#{dot_format(@character.manipulation)}'>-</abbr>" %>");
  $('#health').html("<%=raw "<abbr title='#{dot_format(@character.health)}'>#{dot_format(@character.health + 4)}</abbr>" %>");
  $('#size').html("<%=raw "<abbr title='#{@character.size}'>#{@character.size + 2}</abbr>" %>");
  $('#initiative').html("<%=raw "<abbr title='#{@character.initiative}'>#{@character.initiative + 1}</abbr>" %>");
  $('#speed').html("<%=raw "<abbr title='#{@character.speed}'>#{@character.speed + 4}</abbr>" %>");
  $('#defense').html("<%=raw "<abbr title='#{@character.defense}'>#{[@character.wits, @character.dexterity + 1].min}</abbr>" %>");
  $('#armor').html("<%=raw "<abbr title='#{@character.armor}'>1/1</abbr>" %>");
  formHeader = 3;
<% elsif @form == 'urshul' %>
  $('#strength').html("<%=raw "<abbr title='#{dot_format(@character.strength)}'>#{dot_format(@character.strength + 2)}</abbr>" %>");
  $('#dexterity').html("<%=raw "<abbr title='#{dot_format(@character.dexterity)}'>#{dot_format(@character.dexterity + 2)}</abbr>" %>");
  $('#stamina').html("<%=raw "<abbr title='#{dot_format(@character.stamina)}'>#{dot_format(@character.stamina + 2)}</abbr>" %>");
  $('#manipulation').html("<%=raw "<abbr title='#{dot_format(@character.manipulation)}'>#{dot_format([@character.manipulation - 3, 1].max)}</abbr>" %>");
  $('#health').html("<%=raw "<abbr title='#{dot_format(@character.health)}'>#{dot_format(@character.health + 3)}</abbr>" %>");
  $('#size').html("<%=raw "<abbr title='#{@character.size}'>#{@character.size + 1}</abbr>" %>");
  $('#defense').html("<%=raw "<abbr title='#{@character.defense}'>#{[@character.wits, @character.dexterity + 2].min}</abbr>" %>");
  $('#initiative').html("<%=raw "<abbr title='#{@character.initiative}'>#{@character.initiative + 2}</abbr>" %>");
  $('#speed').html("<%=raw "<abbr title='#{@character.speed}'>#{@character.speed + 7}</abbr>" %>");
  $('#armor').html("<%= @character.armor %>");
  formHeader = 4;
<% elsif @form == 'urhan' %>
  $('#strength').html("<%= dot_format(@character.strength) %>");
  $('#dexterity').html("<%=raw "<abbr title='#{dot_format(@character.dexterity)}'>#{dot_format(@character.dexterity + 2)}</abbr>" %>");
  $('#stamina').html("<%=raw "<abbr title='#{dot_format(@character.stamina)}'>#{dot_format(@character.stamina + 1)}</abbr>" %>");
  $('#manipulation').html("<%=raw "<abbr title='#{dot_format(@character.manipulation)}'>#{dot_format([@character.manipulation - 1, 1].max)}</abbr>" %>");
  $('#health').html("<%= dot_format(@character.health) %>");
  $('#size').html("<%=raw "<abbr title='#{@character.size}'>#{@character.size - 1}</abbr>" %>");
  $('#initiative').html("<%=raw "<abbr title='#{@character.initiative}'>#{@character.initiative + 2}</abbr>" %>");
  $('#speed').html("<%=raw "<abbr title='#{@character.speed}'>#{@character.speed + 5}</abbr>" %>");
  $('#defense').html("<%=raw "<abbr title='#{@character.defense}'>#{[@character.wits, @character.dexterity + 2].min}</abbr>" %>");
  $('#armor').html("<%= @character.armor %>");
  formHeader = 5;
<% end %>

$('#woof_forms th a').removeClass("selected");

$('#woof_forms th:nth-child('+formHeader+') a').addClass("selected");
