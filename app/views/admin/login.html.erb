<%= form_tag do %>
  <h3>Please Log In</h3>
  
  <div>
    <label for="name" class="sized">Name:</label>
    <%= text_field_tag :name, params[:name] %>
  </div>
  
  <div>
    <label for="password" class="sized">Password:</label>
    <%= password_field_tag :password, params[:password] %>
  </div>
  
  <%= submit_tag "Login" %><br />
  <span><%= link_to "Forgot your username?", { :action => "forgot_username" } %></span> | 
  <span><%= link_to "Forgot your password?", { :action => "forgot_password" } %></span> | 
  <span><%= link_to "New User", new_user_path %></span>
<% end %>
